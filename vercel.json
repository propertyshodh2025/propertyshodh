{
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install --no-optional --frozen-lockfile --ignore-scripts=false",
  "framework": "vite",
  "build": {
    "env": {
      "NODE_OPTIONS": "--max_old_space_size=4096",
      "PNPM_FLAGS": "--ignore-scripts=false"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
